@{
    ViewData["Title"] = "Adding Book";
}

<form asp-controller="Book" asp-action="Create" method="post" class="m-auto col-4">
    <div class="form-floating my-3">
        <input type="text" class="form-control" id="Title" name="Title" placeholder="Book Title" required>
        <label for="Title">Title:</label>
    </div>
    <div class="form-floating mb-3">
        <input type="text" class="form-control" id="PublisherName" name="PublisherName" placeholder="Ranok" required> 
        <label for="PublisherName">Publisher:</label>
    </div>
    <div class="form-floating mb-3">
        <input type="number" class="form-control" id="PublishingYear" name="PublishingYear" min="1500" max="2024" value="2024">
        <label for="PublishingYear">Publishing Year:</label>
    </div>
    <div class="form-floating mb-3">
        <input type="number" class="form-control" id="Rating" name="Rating" min="1" max="5" value="1">
        <label for="Rating">Rating:</label>
    </div>
    <div class="form-floating mb-3">
        <input type="number" class="form-control" id="PagesAmount" name="PagesAmount" min="1">
        <label for="PagesAmount">Pages:</label>
    </div>
    <div class="form-floating mb-3">
        <input type="text" class="form-control" id="FirstName" name="Author.FirstName" placeholder="Taras" required>
        <label for="FirstName">Author`s First Name:</label>
    </div>
    <div class="form-floating mb-3">
        <input type="text" class="form-control" id="LastName" name="Author.LastName" placeholder="Shevchenko" required>
        <label for="LastName">Author`s Last Name:</label>
    </div>
    <div class="container float-end">
        <button type="submit" class="btn btn-outline-success float-end">Create</button>
    </div>
</form>
